package seção04;

import java.util.Scanner;

/**
 * @author Matheus
 Faça um programa que leia um valor inteiro e
escreva todos os números pares abaixo dele.
 */
public class Exercicio06 {
   public static void main(String[] args) {
    
	   Scanner sc = new Scanner(System.in);
	   
	   int num = sc.nextInt();
	   for(int i=num; i>0; i--) {
		   
		   if(i % 2 ==0) {
			   
			   System.out.println(i);
		   }
	   }
	   
 }
}
