package seção07;
/*
 Classe ContaEspecial
 atributo float limite
 redefinição do método sacar, permitindo saldo negativo até o valor do limite.
 */
public class ContaEspecial extends ContaBancaria{
 
    float limite;
    
    public ContaEspecial(String cliente, int num_conta, float saldo, float valor, float limite) {
		
		super(cliente, num_conta, saldo, valor);
    	this.limite = limite;

	}
	public void sacar(double saldo) {
		
		if(saldo < 0 && saldo < limite) {
			saldo-=valor;
			
		}
	}
	
	
}
