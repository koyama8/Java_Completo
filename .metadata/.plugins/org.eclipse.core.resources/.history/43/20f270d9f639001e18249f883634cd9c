package estrutura_controle;

import java.util.Scanner;

/**
 Faça um programa que receba o preço de três produtos e 
 informe qual produto você deve comprar, sabendo que a decisão 
  é sempre pelo mais barato.

 */
public class Exercicio02 {
  public static void main(String[] args) {
  
	  Scanner entrada = new Scanner(System.in);
	  
	  System.out.print("Informe o preço do arroz:");
	  float arroz = entrada.nextFloat();
	  
	  System.out.print("Informe o preço do feijao:");
	  float feijao = entrada.nextFloat();
	  
	  System.out.print("Informe o preço da carne:");
	  float carne = entrada.nextFloat();
	  
	  
	  if(arroz < feijao && arroz < carne) {
		  System.out.println("Arroz é o mais barato");
	  }else if(feijao < arroz  && feijao < carne) {
		  System.out.println("Feijao é o mais barato");
	  }else if(carne < arroz && carne < feijao) {
		  System.out.println("Carne é o mais barato");

	  }
 }
}
