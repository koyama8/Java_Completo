package seção07;

import java.io.ObjectInputStream.GetField;
import java.util.Scanner;

public class Excecao {
 public static void main(String[] args) {
    
	 Scanner sc = new Scanner(System.in);
	 
	 
	 System.out.println("Informe o valor total do carro");
	 double valorTotal = sc.nextDouble();
	 
	 System.out.println("Informe a entrada");
	 double entrada = sc.nextDouble();
	 
	 System.out.println("Informe a quantidade de parcelas");
     double parcelas = sc.nextDouble();
     
     try {
         Financiamento finan = new Financiamento(valorTotal,entrada,parcelas);
         System.out.println(finan);
	} catch (Exception e) {
		System.out.println(e.getMessage());
	}
 
     Financiamento finan = new Financiamento(valorTotal,entrada,parcelas);
     finan.depositar(5000, 5000);
     finan.sacar(5000, 2000);
    
 }
}
