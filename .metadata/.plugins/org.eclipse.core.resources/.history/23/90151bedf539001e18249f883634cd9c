package projeto;

import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Adulto {
	
	List<String> adulto = new ArrayList<String>(); 
	
	Scanner sc = new Scanner(System.in);
	
	String nome;
	String sexo;
	String email; 
	String telefone;
	
  
	public void cadastrar() {
		
		   System.out.println("Informe a quantidade de Clientes - Adultos");
		   int qtd = sc.nextInt();
		   System.out.println();
		  
		   for(int i =0; i<qtd; i++) {
			   
			   System.out.println("==========================");
			   
			   System.out.print("Digite o nome:");
			   nome = sc.next();
	           adulto.add(nome);
			   
			   System.out.print("Digite o sexo:");
			   sexo = sc.next();
			   adulto.add(sexo);
			   
			   System.out.print("Digite o email:");
			   email = sc.next();
			   adulto.add(email);

			   System.out.print("Digite o telefone:");
			   telefone = sc.next();
			   adulto.add(telefone);
			   System.out.println("==========================");
               
			   System.out.println();
			

		   }
	}
	
	public void pesquisar() {
		
	  
	}
	
	
	public void remover() {
		
		System.out.println("Digite um nome");
		nome = sc.next();
		
		System.out.println("Digite o sexo");
		sexo = sc.next();
		
		System.out.println("Digite o email");
		email = sc.next();
		
		System.out.println("Digite o telefone");
		telefone = sc.next();
		
		adulto.remove(nome);
		adulto.remove(sexo);
		adulto.remove(email);
		adulto.remove(telefone);

		
	}
	public void mostrar() {
	  
	
	   for(int i = 0; i<adulto.size(); i++) {
		  
		  System.out.println(adulto.get(i));

	  }
  }


	
	

}
