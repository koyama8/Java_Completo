package orientacao_objetos;

public class Financiamento implements Banco {

	public double valorTotal;
	public double entrada;
	public double parcela;
	public double salario;
	public double saldo;
	
	public Financiamento(double valorTotal, double entrada, double parcela ) {
		
		if(entrada < valorTotal * 0.2) {
		  	throw new RuntimeException("A entada deve ser pelo menos 20% do valor atribuido");
		}else if(parcela < 10) {
			throw new RuntimeException("O numero de parcela deve ser 10");
		}
		
		
		this.valorTotal = valorTotal;
		this.entrada = entrada;
		this.parcela = parcela;
		
	}
	
	

	@Override
	public void depositar(double saldo, double salario) {
		 
		saldo += salario;
		System.out.println("Deposito = " + saldo);
		
	}

	@Override
	public void sacar(double saldo, double salario) {
		
		saldo -= salario;
		System.out.println("Saldo = " + saldo);
		
	}

	@Override
	public void saldo(double saldo) {
		System.out.println(saldo);
		
	}
	
	public String toString() {
		return "ValorTotal:" + valorTotal + "\n"+
			   "Entrada:" +entrada+ "\n"+
			   "Parcelas:" + parcela;
	}
	
}
